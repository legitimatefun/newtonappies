---
const year = new Date().getFullYear();
---

<footer>
    <div>
        <div>
            <ul class="icons">
                <li>
                    <a
                        href="https://github.com/legitimatefun"
                        target="_blank"
                        class="foot-btn"
                        ><span class="git-icon">GitHub</span></a
                    >
                </li>
            </ul>
        </div>
        <small>&copy; {year} All Rights Reserved.</small>
    </div>
</footer>
<style>
    ul.icons {
        cursor: default;
        list-style: none;
    }

    ul.icons li {
        display: inline-block;
        padding: 0 0.75rem 0 0;
    }

    div {
        margin: 4rem 0;
        text-align: center;
    }

    small {
        font-family: "Josefin Sans", sans-serif;
    }

    small a {
        color: #375a7f;
        text-decoration: none;
    }
</style>
